<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Android_exam" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="App.MessageCard" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/bg_primary</item>
    </style>

    <style name="App.Header" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="android:textSize">28dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@color/bg_primary_dim</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="App.Link" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/bg_primary_light</item>
    </style>

    <style name="Theme.Android_exam" parent="Base.Theme.Android_exam" />
</resources>